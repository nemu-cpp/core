ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/test-framework/include/Ishiko/Tests.bkl;
nemupath = envvar("NEMU_CPP");
import $(nemupath)/core/include/Nemu/Core.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/NemuCoreTests.sln;
vs2017.solutionfile = ../vc15/NemuCoreTests.sln;
vs2015.solutionfile = ../vc14/NemuCoreTests.sln;
vs2013.solutionfile = ../vc12/NemuCoreTests.sln;

program NemuCoreTests : NemuCore, IshikoTests
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += NemuCore IshikoNetworking IshikoTests IshikoTestsCore IshikoDiff IshikoFileSystem IshikoProcess IshikoText IshikoLogging IshikoErrors boost_program_options boost_filesystem ;
    }

    headers
    {
        ../../src/ConfigurationTests.h
    }

    sources
    {
        ../../src/main.cpp
        ../../src/ConfigurationTests.cpp
    }
}
